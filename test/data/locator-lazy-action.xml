<?xml version="1.0" encoding="utf-8"?>
<!--
This is specific for the test of dependency injection on actionable events and
super lazy loaders allowing any arbitery order of entity declaration.
-->
<imagination>
    <entity id="alpha" class="dummy.lazy_action.Alpha">
        <param type="entity" name="accompany">beta</param>
        <action on="charlie" before="cook" do="order">
            <param type="unicode" name="item">egg and becon</param>
        </action>
        <action on="charlie" intercept="repeat" do="confirm"/>
        <action on="charlie" before="serve" do="speak_to_accompany">
            <param type="str" name="context">watch your hand</param>
        </action>
        <action on="charlie" before="serve" do="wash_hands"/>
        <action on="me" after="eat" do="speak">
            <param type="str" name="context">merci</param>
        </action>
    </entity>
    <entity id="beta" class="dummy.lazy_action.Beta">
        <action on="alpha" after="speak_to_accompany" do="acknowledge"/>
    </entity>
    <entity id="charlie" class="dummy.lazy_action.Charlie">
        <action on="alpha" follow="order" do="repeat"/>
        <action on="beta" follow="order" do="repeat"/>
        <action on="alpha" after="order" do="respond">
            <param type="unicode" name="response">wilco</param>
        </action>
    </entity>
</imagination>